doctype html
head
    meta(content="text/html; charset=utf-8")
    script(src="codebase/dhtmlxscheduler.js")
    link(rel="stylesheet" href="codebase/dhtmlxscheduler.css")
    style(type="text/css" media="screen").
        html, body{
            margin:0px;
            padding:0px;
            height:100%;
            overflow:hidden;
        }

script(type="text/javascript" charset="utf-8").
    function init() {
        scheduler.init('scheduler_here',new Date(2018,8,4),"month");
    }

body(onload="init();")
    div(id="scheduler_here" class="dhx_cal_container" style='width:100%; height:100%;')
        div(class="dhx_cal_navline")
            div(class="dhx_cal_prev_button") &nbsp;
            div(class="dhx_cal_next_button") &nbsp;
            div(class="dhx_cal_today_button")
            div(class="dhx_cal_date")
            div(class="dhx_cal_tab" name="day_tab")
            div(class="dhx_cal_tab" name="week_tab")
            div(class="dhx_cal_tab" name="month_tab")
        div(class="dhx_cal_header")
        div(class="dhx_cal_data")

