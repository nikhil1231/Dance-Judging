extends ./layout/websiteLayoutSemiDeep.pug

block title
  title Register
block content
  include includes/pageTopSemiDeep

  header(class="masthead")
    div(class="container")
        h2(class="text-center text-uppercase text-secondary mb-0") Register
        hr(class="star-dark mb-5")
        div(class="row")
            div(class="col-lg-8 mx-auto")
                form(action="/auth/register_process" method='post')
                    .md-form
                        input#email.form-control(name='email' type='email' value="jerrykang13@gmail.com")
                        label(for='email') Email
                    .md-form
                        input#password.form-control(name='pwd' type='password' value="111111")
                        label(for='password') Password
                    .md-form
                        input#password2.form-control(name='pwd2' type='password' value="111111")
                        label(for='password2') Confirm password
                    .md-form
                        input#username.form-control(name='userName' type='text' value="test")
                        label(for='username') Username
                    br
                    div(id="success")
                    div(class="form-group")
                        input(type="submit" value="Register" class="btn btn-primary btn-xl")